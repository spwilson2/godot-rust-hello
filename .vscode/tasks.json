{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cmake",
            "label": "build full game",
            "command": "build",
            "targets": [ ],
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template build task"
        }, 
        {
            "type": "shell",
            "label": "build godot engine (release)",
            "command": "scons",
            "args": ["-C","${workspaceFolder}/godot", "production=yes", "platform=macos","arch=arm64", "vulkan_sdk_path=/Library/VulkanSDK/1.3.239.0", "target=editor", "-j", "14"],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "build godot engine (debug)",
            "command": "scons",
            "args": ["-C","${workspaceFolder}/godot", "dev_build=yes", "platform=macos","arch=arm64", "vulkan_sdk_path=/Library/VulkanSDK/1.3.239.0", "target=editor", "-j", "14"],
            "group": "build",
        }

    ]
}
