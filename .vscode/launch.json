{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
		{
			"name": "Launch main in debugger",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/godot/bin/godot.macos.editor.dev.arm64",
			"args": ["--path", "${workspaceFolder}/godot-frontend", "res://main.tscn"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",
			"preLaunchTask": "build full game"
		},
		{
			"name": "Launch Editor in debugger",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/godot/bin/godot.macos.editor.dev.arm64",
			"args": ["--editor", "--path", "${workspaceFolder}/godot-frontend"],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb"
		},
    ]
}
